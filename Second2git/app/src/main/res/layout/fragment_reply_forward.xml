<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#F5F5F5">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Reply"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_sent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send"
            android:padding="8dp" />

    </RelativeLayout>

    <!-- Email Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- From field -->
            <EditText
                android:id="@+id/editFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="From"
                android:fontFamily="@font/open_sans"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />

            <!-- To field with icon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/editTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="To"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:layout_toStartOf="@+id/iconType" />

                <ImageView
                    android:id="@+id/iconType"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_reply"
                    android:tint="#7F7F7F"
                    android:contentDescription="Reply Icon" />

            </RelativeLayout>

            <!-- Subject field -->
            <EditText
                android:id="@+id/editSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Subject"
                android:fontFamily="@font/open_sans"
                android:inputType="textCapSentences"
                android:textSize="16sp" />

            <!-- Compose email field -->
            <EditText
                android:id="@+id/editMessage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:gravity="top"
                android:hint="Compose email"
                android:fontFamily="@font/open_sans"
                android:inputType="textMultiLine"
                android:textSize="16sp" />

            <!-- Original email being replied/forwarded -->
            <LinearLayout
                android:id="@+id/originalEmailContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:background="#F9F9F9"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtOriginalHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Original Message"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#7F7F7F"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtOriginalSender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#02110E"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtOriginalSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="#02110E" />

                <TextView
                    android:id="@+id/txtOriginalDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="#7F7F7F" />

                <TextView
                    android:id="@+id/txtOriginalBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="#02110E"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>