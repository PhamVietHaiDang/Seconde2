<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.MainActivity">

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F3FF">

        <!-- Fragment Container for Onboarding/SignIn OVERLAY -->
        <FrameLayout
            android:id="@+id/overlay_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Your original inbox content (stays visible by default) -->
        <ScrollView
            android:id="@+id/main_inbox_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9F3FF"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F9F3FF">

                <LinearLayout
                    android:id="@+id/rhfq7qa194pc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ECD6FF"
                    android:paddingTop="39dp"
                    android:paddingBottom="13dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/r4c1jhptxeap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/cr35bffffff"
                        android:paddingVertical="11dp"
                        android:paddingHorizontal="17dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginHorizontal="14dp"
                        android:orientation="horizontal">

                        <!-- Hamburger Menu Icon -->
                        <ImageView
                            android:id="@+id/rblhycly8y27"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/ic_menu"
                            android:scaleType="fitXY"
                            android:contentDescription="Menu" />

                        <LinearLayout
                            android:id="@+id/rfujveq0z3f"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/r07uc5g5o0zcp"
                                android:textColor="#7F7F7F"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Search in mail"
                                android:fontFamily="@font/open_sans" />
                        </LinearLayout>

                        <!-- Profile Icon -->
                        <ImageView
                            android:id="@+id/r7ftujq7tc27"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@mipmap/ic_launcher"
                            android:tint="#ECD6FF"
                            android:scaleType="fitXY"
                            android:contentDescription="Profile" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rv996d0gnocd"
                        android:textColor="#7F7F7F"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="312dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Inbox"
                        android:fontFamily="@font/open_sans_bold" />
                </LinearLayout>

                <!-- Email List Area (Empty after removal of examples) -->
                <LinearLayout
                    android:id="@+id/rt0vvsgxjze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <!-- Email items will be populated dynamically -->

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Compose Button -->
        <LinearLayout
            android:id="@+id/composeButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="29dp"
            android:layout_marginEnd="29dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/rp4smgichsuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/cr10bb362ff"
                android:paddingVertical="16dp"
                android:paddingHorizontal="17dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/r7b0b45mykd"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_compose"
                    android:scaleType="fitXY"
                    android:contentDescription="Compose" />

                <TextView
                    android:id="@+id/ru4fi9m5u5pd"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Compose"
                    android:fontFamily="@font/open_sans_bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Custom Navigation Drawer -->
    <include
        android:id="@+id/nav_custom"
        layout="@layout/custom_nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>