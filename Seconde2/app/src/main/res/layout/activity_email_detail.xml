<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header with back button and title -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Email"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Scrollable email content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@+id/bottomButtons"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sender info -->
            <TextView
                android:id="@+id/txtSender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Son Tran Giang (via USTH Moodle)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#02110E" />

            <!-- Subject -->
            <TextView
                android:id="@+id/txtSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="mobileApp25-26: Postpone of Moodle test"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#02110E" />

            <!-- Date and time -->
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3:41 PM â€¢ Sep 30, 2024"
                android:textSize="12sp"
                android:textColor="#7F7F7F" />

            <!-- To recipients -->
            <TextView
                android:id="@+id/txtTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="To: you@example.com"
                android:textSize="14sp"
                android:textColor="#7F7F7F" />

            <!-- Email body -->
            <TextView
                android:id="@+id/txtBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Dear Students,\n\nThis is to inform you that the Moodle test for mobileApp25-26 has been postponed. The new date will be announced soon.\n\nPlease check the announcements forum for updates.\n\nBest regards,\nSon Tran Giang"
                android:textSize="16sp"
                android:textColor="#02110E"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom buttons (Reply and Forward) -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:background="#F5F5F5">

        <!-- Reply Button -->
        <LinearLayout
            android:id="@+id/btnReply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reply"
                android:tint="#7F7F7F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Reply"
                android:textSize="12sp"
                android:textColor="#7F7F7F" />

        </LinearLayout>

        <!-- Forward Button -->
        <LinearLayout
            android:id="@+id/btnForward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_forward"
                android:tint="#7F7F7F" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Forward"
                android:textSize="12sp"
                android:textColor="#7F7F7F" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>