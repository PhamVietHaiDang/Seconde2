<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noDataLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- Container for icon and text to keep them together -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <ImageView
            android:id="@+id/noDataIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_email_questionmark"
            android:tint="#7F7F7F"
            android:contentDescription="No data" />

        <TextView
            android:id="@+id/noDataTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No data found"
            android:textSize="16sp"
            android:textColor="#7F7F7F"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noDataMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="There's nothing to display here"
            android:textSize="14sp"
            android:textColor="#7F7F7F"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>