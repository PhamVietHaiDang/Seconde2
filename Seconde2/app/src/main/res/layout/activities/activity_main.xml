<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.MainActivity">

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F3FF">

        <!-- Fragment Container - MUST BE FIRST so it's underneath -->
        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Default Inbox Content - Initially visible, will be hidden when fragments show -->
        <ScrollView
            android:id="@+id/main_inbox_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9F3FF"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F9F3FF">

                <LinearLayout
                    android:id="@+id/rhfq7qa194pc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ECD6FF"
                    android:paddingTop="39dp"
                    android:paddingBottom="13dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/r4c1jhptxeap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/cr35bffffff"
                        android:paddingVertical="11dp"
                        android:paddingHorizontal="17dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginHorizontal="14dp"
                        android:orientation="horizontal">

                        <!-- Hamburger Menu Icon -->
                        <ImageView
                            android:id="@+id/rblhycly8y27"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="13dp"
                            android:src="@drawable/ic_menu"
                            android:scaleType="fitXY"
                            android:contentDescription="Menu" />

                        <LinearLayout
                            android:id="@+id/rfujveq0z3f"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/r07uc5g5o0zcp"
                                android:textColor="#7F7F7F"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Search in mail"
                                />
                        </LinearLayout>

                        <!-- Profile Icon -->
                        <ImageView
                            android:id="@+id/r7ftujq7tc27"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@mipmap/ic_launcher"
                            android:tint="#ECD6FF"
                            android:scaleType="fitXY"
                            android:contentDescription="Profile" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/rv996d0gnocd"
                        android:textColor="#7F7F7F"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="312dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Inbox"
                        />
                </LinearLayout>

                <!-- Email List Area - REMOVED BOTTOM PADDING -->
                <LinearLayout
                    android:id="@+id/rt0vvsgxjze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <!-- Email 1: Son Tran Giang -->
                    <LinearLayout
                        android:id="@+id/rel5em68e47i"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="#FFFFFF"
                        android:paddingVertical="13dp"
                        android:paddingHorizontal="14dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rijyn4k706wc"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginEnd="14dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY"
                            android:contentDescription="Son Tran Giang" />

                        <LinearLayout
                            android:id="@+id/reio60ywu4f6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/rrielxodoeoa"
                                android:textColor="#02110E"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="Son Tran Giang (via USTH Moodle)"
                                />

                            <TextView
                                android:id="@+id/rypmko0uewfh"
                                android:textColor="#02110E"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="mobileApp25-26:Postpone of Moodle test mobileApp25-26 &gt;&gt; Forums &gt;&gt; Announce..."
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/rv7g3o0xwl7k"
                            android:textColor="#02110E"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3:41"
                            />
                    </LinearLayout>

                    <!-- Email 2: Minh Hoang -->
                    <LinearLayout
                        android:id="@+id/rommwk8vbiz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="13dp"
                        android:paddingHorizontal="14dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/r8lenrocvju8"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginEnd="14dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY"
                            android:contentDescription="Minh Hoang" />

                        <LinearLayout
                            android:id="@+id/renlumn241gb"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/rhgr7205fwjk"
                                android:textColor="#02110E"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="Minh Hoang (via Google Drive)"
                                />

                            <TextView
                                android:id="@+id/ry5jjz15jkxp"
                                android:textColor="#02110E"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="Share request for &quot;MOBILE&quot;\nShare a folder? Minh Hoang (buithaihoang..."
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/r47nbqnvmldq"
                            android:textColor="#02110E"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Sep 30"
                            />
                    </LinearLayout>

                    <!-- Email 3: Milano -->
                    <LinearLayout
                        android:id="@+id/rqkb0gxkystq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="#FFFFFF"
                        android:paddingVertical="13dp"
                        android:paddingHorizontal="14dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/r7g4a2qr50yd"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginEnd="14dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY"
                            android:contentDescription="Milano" />

                        <LinearLayout
                            android:id="@+id/rss1le6y854"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/rxt8udk2drv"
                                android:textColor="#02110E"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Milano"
                                />

                            <TextView
                                android:id="@+id/rzy77piodx"
                                android:textColor="#02110E"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:text="Part 8 of  8: Missions Complete\nDear Melancholia, you have completed the..."
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/rvlp6f5rfkif"
                            android:textColor="#02110E"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sep 30"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Compose Button - Fixed in Bottom Right -->
        <LinearLayout
            android:id="@+id/composeButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="29dp"
            android:layout_marginEnd="29dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rp4smgichsuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/cr10bb362ff"
                android:paddingVertical="16dp"
                android:paddingHorizontal="17dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/r7b0b45mykd"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_compose"
                    android:tint="#000000"
                    android:scaleType="fitXY"
                    android:contentDescription="Compose" />

                <TextView
                    android:id="@+id/ru4fi9m5u5pd"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Compose"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Custom Navigation Drawer -->
    <include
        android:id="@+id/nav_custom"
        layout="@layout/custom_nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>